<h2>Tasks</h2>

<%= link_to(routes.new_task_path) { html.button '+' } %>

<% if tasks.any? %>
  <div id="tasks">
    <% tasks.each do |task| %>
      <div class="task">
        <h3><%= link_to task.name, routes.task_path(task.id) %></h3>
        <p><%= task.description %></p>
        <%=
          form_for :task, routes.task_path(task.id), method: :delete do
            submit 'delete'
          end
        %>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="placeholder">There are no tasks yet.</p>
<% end %>
